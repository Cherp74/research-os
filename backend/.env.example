# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LLM Provider: "openrouter" or "ollama"
LLM_PROVIDER=openrouter

# Model configuration (OpenRouter format: provider/model)
# Scout: Fast, broad coverage
MODEL_SCOUT=google/gemini-flash-1.5

# Skeptic: Critical analysis
MODEL_SKEPTIC=deepseek/deepseek-chat

# Analyst: Structured extraction
MODEL_ANALYST=qwen/qwen-2.5-72b-instruct

# Synthesizer: Final report (use best model)
MODEL_SYNTHESIZER=anthropic/claude-3-opus

# Fallback model for all agents
MODEL_DEFAULT=google/gemini-flash-1.5

# Ollama configuration (if using local)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# Search Provider: "openrouter", "tavily", or "duckduckgo"
# OpenRouter uses your existing API key + Exa web plugin (~$0.02/search)
SEARCH_PROVIDER=openrouter

# Optional: Tavily API key (if using tavily provider)
# TAVILY_API_KEY=your_tavily_api_key_here
