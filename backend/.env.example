# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LLM Provider: "openrouter" or "ollama"
LLM_PROVIDER=openrouter

# Model configuration (OpenRouter format: provider/model)
# Scout: Fast, broad coverage
MODEL_SCOUT=google/gemini-2.5-flash

# Skeptic: Critical analysis (DeepSeek reasoning)
MODEL_SKEPTIC=deepseek/deepseek-chat-v3.1

# Analyst: Structured extraction (Qwen)
MODEL_ANALYST=qwen/qwen3-max

# Synthesizer: Final report (Opus)
MODEL_SYNTHESIZER=anthropic/claude-opus-4

# Fallback model for all agents
MODEL_DEFAULT=google/gemini-2.5-flash

# Ollama configuration (if using local)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# Search Provider: "openrouter", "tavily", or "duckduckgo"
# OpenRouter uses your existing API key + Exa web plugin (~$0.02/search)
SEARCH_PROVIDER=openrouter

# Optional: Tavily API key (if using tavily provider)
# TAVILY_API_KEY=your_tavily_api_key_here
